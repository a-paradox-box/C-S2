#include<stdio.h>
void main()
{
int m1,m2,m3,m4,tm,no;
char name[100];
float p;
printf("enter the name");
scanf("%s",name);
printf("enter the student number");
scanf("%d",&no);
printf("enter the pysics mark");
scanf("%d",&m1);
printf("enter the cemistry mark");
scanf("%d",&m2);
printf("enter the maths mark");
scanf("%d",&m3);
printf("enter the english mark");
scanf("%d",&m4);
tm=m1+m2+m3+m4;
printf("total mark=%d",tm);
p=tm/500*100;
printf("percentage =%f",p);
if (p>=80)
printf("grade=distinition");
else if (p>=50)
printf("grade=first class");
else if (p>=40)
printf("grade=second class");
else if (p>=30)
printf("grade=just pass");
else (p>=0)
printf("grade=failed");
}
